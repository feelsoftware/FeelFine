<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/entryPointFragment">

    <fragment
        android:id="@+id/entryPointFragment"
        android:name="com.feelsoftware.feelfine.ui.EntryPointFragment"
        android:label="EntryPointFragment"
        tools:layout="@layout/fragment_entry_point">
        <action
            android:id="@+id/toMainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/toOnboarding"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.feelsoftware.feelfine.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toTempFragment"
            app:destination="@id/numberFragment" />
    </fragment>

    <fragment
        android:id="@+id/numberFragment"
        android:name="com.feelsoftware.feelfine.ui.NumberFragment"
        android:label="NumberFragment"
        tools:layout="@layout/fragment_number">
        <argument
            android:name="number"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.feelsoftware.feelfine.ui.OnboardingFragment"
        android:label="OnboardingFragment" />

</navigation>