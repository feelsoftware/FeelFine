<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/circle_progress"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        tools:text="12000  \n steps"
        android:textSize="28sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <TextView
        android:id="@+id/scorePercentTV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/outline_trending_up_24"
        android:text="30%"
        app:layout_constraintEnd_toEndOf="@+id/scoreView"
        app:layout_constraintTop_toTopOf="@+id/scoreView" />

    <TextView
        android:id="@+id/todayLabel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Daily steps "
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todayScoreTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Today you have 60% \n of your goal "
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todayLabel" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/greenMain"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />


    <TextView
        android:id="@+id/caloriesTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Burned: 2567 kkal"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/distanceTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Distance : 10 kilometers"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/caloriesTV" />

</androidx.constraintlayout.widget.ConstraintLayout>