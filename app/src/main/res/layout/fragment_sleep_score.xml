<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/circle_progress"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        tools:text="2 \n hours"
        android:textSize="28sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

    <TextView
        android:id="@+id/scorePercentTV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/outline_trending_down_24"
        android:text="70%"
        app:layout_constraintEnd_toEndOf="@+id/scoreView"
        app:layout_constraintTop_toTopOf="@+id/scoreView" />

    <TextView
        android:id="@+id/todayLabel"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="Daily sleep"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todayScoreTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Today you have 75% \n of your goal "
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todayLabel" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/greenMain"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/awakeTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Awake : 2 times"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />


    <TextView
        android:id="@+id/lightSleepTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Light sleep : 2 hours 10 minutes"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/awakeTV" />

    <TextView
        android:id="@+id/deepSleepTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Deep sleep : 6 hours 2 minutes"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lightSleepTV" />

    <TextView
        android:id="@+id/outOfBedTV"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        tools:text="Out of bed: 14 hours 22 minutes"
        android:drawableLeft="@drawable/full_circle_shape"
        android:drawablePadding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deepSleepTV" />

</androidx.constraintlayout.widget.ConstraintLayout>